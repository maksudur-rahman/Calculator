<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="70sp"
                android:layout_height="60sp"
                android:layout_marginLeft="-3sp"
                android:src="@drawable/rotno"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:text="Rotno"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="3sp"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotnocse@gmail.com"
                android:textSize="20dp"

                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image" />
            <Button
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:textAllCaps="false"
                android:layout_toRightOf="@+id/email"
                android:id="@+id/btnfollow"
                android:layout_marginLeft="30sp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/btnfollow"
                android:layout_toEndOf="@+id/btnfollow" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="dsjgfealkrfgblekawrhfluisrethresglrtghilusrthilerwkgyuerwihg"
            android:textSize="15sp"
            android:id="@+id/textView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="29 Photos"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21 Following"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3980 Followers"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/text1"
                android:background="@drawable/im1"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text2"
                    android:background="@drawable/im8"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/im7"
                    android:id="@+id/text3"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/text4"
                    android:background="@drawable/im2"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/im5"
                    android:id="@+id/text5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/text6"
                android:background="@drawable/im6"
                android:layout_weight="2"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/text7"
                android:background="@drawable/im7"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/text8"
                    android:background="@drawable/im3"
                    android:layout_weight="2"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/im9"
                    android:id="@+id/text9"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>